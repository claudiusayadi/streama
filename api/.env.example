# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Node Environment
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=streama
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DB_URL=postgresql://postgres:postgres@localhost:5432/streama

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_TTL=7d
JWT_COOKIES_TTL=604800000

# TMDB API Configuration
TMDB_API_URL=https://api.themoviedb.org/3
TMDB_API_KEY=your-tmdb-api-key-here

# Rate Limiting Configuration
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Email (Development)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USERNAME=your-mailtrap-username
EMAIL_PASSWORD=your-mailtrap-password
EMAIL_FROM=noreply@streama.com
EMAIL_SENDER=Streama

# Email (Production)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_LOGIN=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Stripe
PAYMENT_SECRET_KEY=sk_test_your_stripe_secret_key
PAYMENT_WEBHOOK_KEY=whsec_your_webhook_secret

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Docker-specific configurations
API_PORT=3000
API_DEV_PORT=3001

# Security Headers Configuration
HELMET_CROSS_ORIGIN_EMBEDDER_POLICY=false
HELMET_CONTENT_SECURITY_POLICY=false

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true


